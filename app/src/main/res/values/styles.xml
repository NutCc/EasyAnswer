<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkToolbarTheme" parent="Theme.AppCompat.NoActionBar"/>

    <style name="EditTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--Status bar color-->
    <color name="statusColor">#fff</color>
    <!-- toolBar color -->
    <color name="toolBarColor">#03A9F4</color>
    <!--EditText,RadioButton,CheckBox color-->
    <color name="editColor">#737272</color>
    <!--Window color-->
    <color name="widowColor">#ffffff</color>
</resources>
