<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.nutsky.nutc.easyanswer.ui.activity.SignUpActivity">

    <include layout="@layout/include_back_toolbar" />
    <TextView
        android:id="@+id/name"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称 :"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/et_name"
        android:layout_marginLeft="6dp"
        android:layout_alignBaseline="@id/name"
        android:layout_toRightOf="@id/name"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:hint="最大长度不超过12个字符" />

    <TextView
        android:id="@+id/mail"
        android:layout_below="@id/name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱 :"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et_mail"
        android:layout_marginLeft="6dp"
        android:layout_alignBaseline="@id/mail"
        android:layout_toRightOf="@id/mail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp" />
    <TextView
        android:id="@+id/password"
        android:layout_below="@id/mail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码 :"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/et_password"
        android:inputType="textPassword"
        android:layout_marginLeft="6dp"
        android:layout_alignBaseline="@id/password"
        android:layout_toRightOf="@id/password"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:hint="支持6-16位数字、大小写字母"/>
    <TextView
        android:id="@+id/password_confirm"
        android:layout_below="@id/password"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码 :"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/et_password_confirm"
        android:inputType="textPassword"
        android:layout_marginLeft="6dp"
        android:layout_alignBaseline="@id/password_confirm"
        android:layout_toRightOf="@id/password_confirm"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_sign_login"
        android:layout_below="@id/password_confirm"
        android:padding="6dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="注册并登录"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"/>

</RelativeLayout>
