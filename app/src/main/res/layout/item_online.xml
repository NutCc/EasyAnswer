<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/itemOnline">
    <TextView
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:id="@+id/tv_online_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张老师"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_online_question_brief"
        android:layout_below="@id/tv_online_name"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于刚的干涉课后习题的解答"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_online_time"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tv_online_question_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="2016-11-14  14:00-16:00"/>

</RelativeLayout>